/* pages/user/component/topic-list.wxss */
@import "/static/css/common.wxss";

.topic-item{
    padding: 30rpx 38rpx;
    border-bottom: 2rpx solid #d9dada; 
}
.topic-item .head{
    width: 100rpx;
    height: 100rpx;
    border-radius:50%;
    overflow:hidden;
}
.topic-item .head .img{
    width: 100%;
    height: 100%;
}
.topic-item .topic-info{
    width:80%;
    margin-left:40rpx;
    padding-top:8rpx;
}
.topic-item .title{
    font-size: 32rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.topic-item  .box{
    font-size: 24rpx;
    color: #6b6b6b;
    margin-top: 14rpx;
}