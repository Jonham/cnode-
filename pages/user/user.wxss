/* pages/user.wxss */
@import "/static/css/common.wxss";

page,.user-container ,.footer,.topic-swipre{
    height: 100%;
}
.user-container .header{
    background: url(http://p86t9neoe.bkt.clouddn.com/user_header_bg.png);
    color:#fff;
    font-size: 28rpx;
    padding: 40rpx 0 20rpx;
    text-align: center;
}
.user-container .header .head{
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    overflow: hidden; 
    margin: auto;
    background: #041114;
}
.user-container .header .head .img{
    width: 100%;
    height: 100%;
}
.user-container .header .name{
    font-size: 32rpx;
    padding: 8rpx 0;
}
.user-container .header .url{
    color: #6b6b6b;
    text-decoration: underline;
}
.user-container .header .change{
    padding: 0 38rpx;
    margin-top: 60rpx;
    font-size: 22rpx; 
}
.user-container .header .change .integral{
    color: #80bd01;
}
